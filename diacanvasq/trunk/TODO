?DiaCanvasItemHandles
static gpointer
g_list_o_objects_copy (gpointer l)
{
        GList *orig, *newl = NULL;

        for (orig = g_list_last (l); orig != NULL; orig = orig->prev) {
                g_object_ref (orig->data);
                newl = g_list_prepend (newl, orig->data);
        }
        return newl;
}
