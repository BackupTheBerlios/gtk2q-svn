#!/bin/sh

export gtkpascalgen_outdir="$(pwd)"
export gtkpascalgen_indir="$(pwd)"

x="$(pwd)"
x="${x/\/trunk\/gtk-pascal-gen/}"
x="${x/\/gtk-pascal-gen/}"
x="${x##*/}"
# x = /home/dannym/src/pascal/gtk2q
x="${x%q}"
# x = gtk2

cd "XXXVARDIRXXX" || {
  echo "error: could not find directory XXXVARDIRXXX.">&2
  exit 1
}

mod="${x}"
[ "${x}" = "gnomecanvas" ] && mod="gnome-canvas"
[ "${x}" = "gtk2" ] && mod=""

export mod

grep -R "is deprecated" ../input/* |grep "^.*<literal>\([^<]*\)</literal>.*$" |sed 's;^.*<literal>\([^<]*\)</literal>.*$;\1;' |grep -v "^NULL$" |sort |uniq >deprecated.txt

app/gen ${mod}
X="$?"
if [ "$X" -ne "0" ]
then
	exit "$X"
fi

/usr/bin/env python app/scanenum.py "../output" ${mod}
X="$?"
if [ "$X" -ne "0" ]
then
	exit "$X"
fi
exit 0
